# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/euroasiangroup_erp
MONGODB_TEST_URI=mongodb://localhost:27017/euroasiangroup_erp_test

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS Configuration
FRONTEND_TECH_URL=http://localhost:3000
FRONTEND_ADMIN_URL=http://localhost:3001
FRONTEND_CUSTOMER_URL=http://localhost:3002
FRONTEND_VENDOR_URL=http://localhost:3003
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# Optional: Sentry Error Tracking
SENTRY_DSN=

# Optional: Jira Integration
JIRA_HOST=
JIRA_USERNAME=
JIRA_API_TOKEN=
JIRA_PROJECT_KEY=

